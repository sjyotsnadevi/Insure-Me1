pipeline {
  agent any

  tools {
    maven 'M2_HOME'
    }

  stages {
    stage('CheckOut') {
      steps {
        echo 'Checkout the source code from GitHub'
        git branch: 'main', url: 'https://github.com/sjyotsnadevi/Insure-Me.git'
            }
    }
    stage('Package') {
       steps {
         echo 'Generate a war file package using Maven'
         sh 'mvn clean package'
             }
    }
    stage('Publish TestNG report') {
       steps {
         echo 'Generate TestNG Report'
         publishHTML([allowMissing: false, alwaysLinkToLastBuild: false, keepAll: false, reportDir: '/root/source/apache-tomcat-9.0.87/webapps/Jenkins/workspace/Insure-Me1/target/surefire-reports', reportFiles: 'index.html', reportName: 'HTML Report', reportTitles: '', useWrapperFileDirectly: true])    
              }
    }
    }
}
